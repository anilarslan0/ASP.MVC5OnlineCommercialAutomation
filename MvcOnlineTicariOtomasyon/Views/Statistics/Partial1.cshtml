@model IEnumerable<MvcOnlineTicariOtomasyon.Models.Class.GroupClass2>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Departman Personel Sayısı</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Departman</th>
                    <th>Progress Bar</th>
                    <th style="width: 40px">Sayı</th>
                </tr>
            </thead>
            <tbody>
                @{ int siraNo = 0;}
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{siraNo++;} @siraNo</td>
                        <td>@x.Departman</td>
                        <td>
                            @if (x.Count == 1)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                                </div>
                            }

                            @if (x.Count == 2)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-warning" style="width: 55%"></div>
                                </div>
                            }

                            @if (x.Count == 3)
                            {
                                <div class="progress progress-xs">
                                    <div class="progress-bar bg-success" style="width: 55%"></div>
                                </div>
                            }
                        </td>
                        <td>
                            @if (x.Count == 1)
                            {
                                <span class="badge bg-danger">@x.Count</span>
                            }
                            @if (x.Count == 2)
                            {
                                <span class="badge bg-warning">@x.Count</span>
                            }
                            @if (x.Count == 3)
                            {
                                <span class="badge bg-success">@x.Count</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
<!-- /.card -->

