@using MvcOnlineTicariOtomasyon.Models.Class
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px;">
    <tr>
       
        <th>Kategori Adı</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var kategori in Model)
    {
<tr>
   
    <td>
        @kategori.CategoryName
    </td>
    <td>
        <a href="/Category/KategoriSil/@kategori.CategoryId" class="btn btn-danger">Sil</a>
    </td>
    <td>
        <a href="/Category/KategoriGetir/@kategori.CategoryId" class="btn btn-success">Güncelle</a>
    </td>

</tr>
    }

</table>
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("Index",new {page}))
<a href="/Category/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>

